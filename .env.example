# =============================================================================
# Arquivo de Exemplo de Variáveis de Ambiente
# =============================================================================
# 
# Copie este arquivo para .env e configure os valores apropriados
# NUNCA commite o arquivo .env no repositório!
#
# Para produção no Cloud Run, configure estas variáveis no Azure DevOps
# =============================================================================

# -----------------------------------------------------------------------------
# CONFIGURAÇÕES DA APLICAÇÃO
# -----------------------------------------------------------------------------

# Ambiente de execução (development, production, test)
NODE_ENV=development

# Porta da aplicação (Cloud Run usa 8080)
PORT=3000

# -----------------------------------------------------------------------------
# CONFIGURAÇÕES DO BANCO DE DADOS
# -----------------------------------------------------------------------------

# URL de conexão com o banco de dados
# Desenvolvimento (SQLite): sqlite:./data/database.sqlite
# Produção: postgresql://user:password@host:port/database
DATABASE_URL=sqlite:./data/database.sqlite

# Configurações específicas do Sequelize
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nestjs_app
DB_USER=postgres
DB_PASSWORD=password
DB_DIALECT=sqlite

# -----------------------------------------------------------------------------
# CONFIGURAÇÕES DE SEGURANÇA
# -----------------------------------------------------------------------------

# Chave secreta para JWT (gere uma chave forte para produção)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Chave de criptografia para dados sensíveis
ENCRYPTION_KEY=your-encryption-key-32-characters

# CORS Origins (separados por vírgula)
CORS_ORIGINS=http://localhost:3000,http://localhost:4200

# -----------------------------------------------------------------------------
# CONFIGURAÇÕES DE CACHE (REDIS)
# -----------------------------------------------------------------------------

# URL do Redis (opcional)
REDIS_URL=redis://localhost:6379

# Configurações específicas do Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# -----------------------------------------------------------------------------
# CONFIGURAÇÕES DE MONITORAMENTO
# -----------------------------------------------------------------------------

# Habilitar métricas do Prometheus
ENABLE_METRICS=true

# Prefixo das métricas
METRICS_PREFIX=nestjs_app

# Intervalo de coleta de métricas (ms)
METRICS_INTERVAL=5000

# -----------------------------------------------------------------------------
# CONFIGURAÇÕES DE LOG
# -----------------------------------------------------------------------------

# Nível de log (error, warn, info, debug, verbose)
LOG_LEVEL=info

# Formato do log (json, simple)
LOG_FORMAT=json

# Habilitar logs de requisições HTTP
ENABLE_HTTP_LOGS=true

# -----------------------------------------------------------------------------
# CONFIGURAÇÕES DE EMAIL (OPCIONAL)
# -----------------------------------------------------------------------------

# Provedor de email (smtp, sendgrid, mailgun)
EMAIL_PROVIDER=smtp

# Configurações SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key

# -----------------------------------------------------------------------------
# CONFIGURAÇÕES DE STORAGE (OPCIONAL)
# -----------------------------------------------------------------------------

# Provedor de storage (local, gcs, s3)
STORAGE_PROVIDER=local

# Google Cloud Storage
GCS_BUCKET_NAME=your-bucket-name
GCS_PROJECT_ID=your-project-id
GCS_KEY_FILE=path/to/service-account-key.json

# AWS S3
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your-bucket-name

# -----------------------------------------------------------------------------
# CONFIGURAÇÕES DE RATE LIMITING
# -----------------------------------------------------------------------------

# Habilitar rate limiting
ENABLE_RATE_LIMIT=true

# Número máximo de requisições por janela de tempo
RATE_LIMIT_MAX=100

# Janela de tempo em milissegundos (15 minutos = 900000)
RATE_LIMIT_WINDOW=900000

# -----------------------------------------------------------------------------
# CONFIGURAÇÕES DE SWAGGER/OPENAPI
# -----------------------------------------------------------------------------

# Habilitar documentação Swagger
ENABLE_SWAGGER=true

# Título da API
API_TITLE=NestJS Benefits API

# Descrição da API
API_DESCRIPTION=API para gerenciamento de benefícios

# Versão da API
API_VERSION=1.0.0

# -----------------------------------------------------------------------------
# CONFIGURAÇÕES DE HEALTH CHECK
# -----------------------------------------------------------------------------

# Timeout para health checks (ms)
HEALTH_CHECK_TIMEOUT=5000

# Intervalo entre health checks (ms)
HEALTH_CHECK_INTERVAL=30000

# -----------------------------------------------------------------------------
# CONFIGURAÇÕES ESPECÍFICAS DO CLOUD RUN
# -----------------------------------------------------------------------------

# Estas variáveis são configuradas automaticamente pelo Cloud Run
# Não é necessário defini-las localmente

# K_SERVICE=nestjs-app
# K_REVISION=nestjs-app-00001-abc
# K_CONFIGURATION=nestjs-app
# GOOGLE_CLOUD_PROJECT=your-project-id

# -----------------------------------------------------------------------------
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# -----------------------------------------------------------------------------

# Habilitar hot reload
ENABLE_HOT_RELOAD=true

# Habilitar debug
ENABLE_DEBUG=false

# Porta do debugger
DEBUG_PORT=9229

# -----------------------------------------------------------------------------
# CONFIGURAÇÕES DE TESTE
# -----------------------------------------------------------------------------

# Banco de dados para testes
TEST_DATABASE_URL=sqlite::memory:

# Desabilitar logs durante testes
DISABLE_LOGS_IN_TESTS=true

# Timeout para testes (ms)
TEST_TIMEOUT=30000